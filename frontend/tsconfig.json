{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "noEmit": false,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "declaration": true,
        "lib": [
            "ES2015",
            "DOM"
        ],
        "types": [
            "node",
            "cypress"
        ]
    },
    "include": [
        "src/**/*.ts",
        "cypress/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}